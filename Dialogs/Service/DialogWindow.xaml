<controls:MetroWindow  xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="VOlkin.Dialogs.Service.DialogWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VOlkin.Dialogs.Service"
      mc:Ignorable="d" 
      WindowStartupLocation="CenterScreen"
      Title="{Binding Title}"
      Height="240"
      Width="600"
      ResizeMode="NoResize"
      BorderBrush="MidnightBlue">

    <ContentControl FontSize="16" x:Name="ContentPresenter" Content="{Binding}" VerticalAlignment="Center"/>

</controls:MetroWindow>
