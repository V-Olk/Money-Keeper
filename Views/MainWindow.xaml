<controls:MetroWindow x:Class="VOlkin.MainWindow" xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VOlkin.Views"
        mc:Ignorable="d"
        BorderThickness="0"
        Title="Money Keeper" Height="600" Width="450">

    <TabControl TabStripPlacement="Bottom" SelectedIndex="1">

        <TabControl.Resources>
            <Style TargetType="{x:Type TabPanel}">
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </TabControl.Resources>

        <TabItem Header="Investments">
            
        </TabItem>

        <TabItem DataContext="{Binding ChildrenViews[0]}" Header="Main Info">
            <views:MainInfoView/>
        </TabItem>

        <TabItem DataContext="{Binding ChildrenViews[1]}" Header="Crypto">
            <views:CryptoView/>
        </TabItem>

    </TabControl>
</controls:MetroWindow>
